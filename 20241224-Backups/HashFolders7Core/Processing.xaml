<Window x:Class="HashFolders.Processing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashFolders"
        mc:Ignorable="d"
        Title="Processing" Height="227.955" Width="349.324">
    <Grid Height="196" VerticalAlignment="Top">
        <Label Content="Folders:" HorizontalAlignment="Left" Margin="15,113,0,0" VerticalAlignment="Top"/>
        <Label Content="Files:" HorizontalAlignment="Left" Margin="15,139,0,0" VerticalAlignment="Top"/>
        <Label Content="Processed:" HorizontalAlignment="Left" Margin="82,87,0,0" VerticalAlignment="Top"/>
        <Label Content="Remaining:" HorizontalAlignment="Left" Margin="193,87,0,0" VerticalAlignment="Top"/>
        <Label Content="0" HorizontalAlignment="Left" Margin="110,113,0,0" VerticalAlignment="Top" Name="lbFoldersProcessed"/>
        <Label Content="0" HorizontalAlignment="Left" Margin="219,139,0,0" VerticalAlignment="Top" Name="lbFilesOutstanding"/>
        <Label Content="1" HorizontalAlignment="Left" Margin="219,113,0,0" VerticalAlignment="Top" Name="lbFoldersOutstanding"/>
        <Label Content="0" HorizontalAlignment="Left" Margin="110,139,0,0" VerticalAlignment="Top" x:Name="lbFilesProcessed"/>
        <Label Content="# Threads:" HorizontalAlignment="Left" Margin="193,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.503,1.798"/>
        <Label Content="0" HorizontalAlignment="Left" Margin="288,42,0,0" VerticalAlignment="Top" x:Name="lbNumThreadsRunning"/>
        <Label Content="Duration:" HorizontalAlignment="Left" Margin="15,163,0,0" VerticalAlignment="Top"/>
        <Label Content="00:00" HorizontalAlignment="Left" Margin="99,163,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.476,1.53" Name="lbDuration"/>
        <Button x:Name="btnAbort1" Content="Abort" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnAbort1_Click"/>
        <Button x:Name="btnClose1" Content="Close" HorizontalAlignment="Left" Margin="250,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.711,0.532" IsEnabled="False" Click="btnClose1_Click"/>
        <Button x:Name="btnPause" Content="Pause" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="btnPause_Click"/>
        <Button x:Name="btnResume" Content="Resume" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="btnResume_Click"/>
        <Label Content="State:" HorizontalAlignment="Left" Margin="13,42,0,0" VerticalAlignment="Top"/>
        <Label Content="Running" HorizontalAlignment="Left" Margin="80,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.476,1.53" x:Name="lbState" Width="66"/>

    </Grid>
</Window>
