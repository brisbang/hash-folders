<Window x:Class="HashFolders.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashFolders"
        mc:Ignorable="d"
        Title="Main" Height="300" Width="300">
    <DockPanel>
        <Menu VerticalAlignment="Top" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Index folders..." Click="mnuHashFolders_Click"/>
                <MenuItem Header="Compact database..." Click="mnuCompactDatabase_Click" IsEnabled="False"/>
                <MenuItem Header="Compare folders..." Click="mnuCompareFolders_Click" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="mnuExitItem_Click"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
