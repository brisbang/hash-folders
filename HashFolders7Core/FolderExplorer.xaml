<Window x:Class="HashFolders.FolderExplorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Explorer" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Folder Tree -->
        <TreeView Name="FolderTree" Grid.Column="0" SelectedItemChanged="FolderTree_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding SubFolders}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Resources/folder.png" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Splitter between Left and Middle -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Gray"/>

        <!-- Middle Panel: File List -->
        <ListBox Name="FileList" Grid.Column="2" SelectionChanged="FileList_SelectionChanged" />

        <!-- Splitter between Middle and Right -->
        <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Gray"/>

        <!-- Right Panel: Image Preview -->
        <Border Grid.Column="4" BorderBrush="LightGray" BorderThickness="1" Padding="5">
            <Image Name="ImagePreview" Stretch="Uniform" />
        </Border>
    </Grid>
</Window>
