<Window x:Class="HashFolders.FolderComparison"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Comparison" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <StackPanel Grid.Column="0" Margin="5">
            <Label x:Name="LeftFolder" />
            <ListBox x:Name="LeftFileList" SelectionChanged="LeftFileList_SelectionChanged" />
        </StackPanel>

        <!-- Middle Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image x:Name="TopImage" Grid.Row="0" Stretch="Uniform" Margin="5" />
            <Image x:Name="BottomImage" Grid.Row="1" Stretch="Uniform" Margin="5" />
        </Grid>

        <!-- Right Panel -->
        <StackPanel Grid.Column="2" Margin="5">
            <ComboBox x:Name="FolderSelector" SelectionChanged="FolderSelector_SelectionChanged" />
            <ListBox x:Name="RightFileList" DisplayMemberPath="Name" SelectionChanged="RightFileList_SelectionChanged">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMatch}" Value="True">
                                <Setter Property="Background" Value="LightGreen"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
