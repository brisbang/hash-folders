<Window x:Class="HashFolders.ViewFolders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Explorer" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Drive Selector + Folder Tree -->
        <DockPanel Grid.Column="0">
            <TreeView Name="FolderTree"
                    SelectedItemChanged="FolderTree_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding SubFolders}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Resources/folder.png"
                                Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </DockPanel>

        <!-- Splitter between Left and Middle -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Gray"/>

        <!-- Middle Panel: File List -->
        <ListBox Name="FileList"
                Grid.Column="2"
                DisplayMemberPath="Name"
                SelectionChanged="FileList_SelectionChanged" />

        <!-- Splitter between Middle and Right -->
        <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Gray"/>

        <!-- Right Panel: Info + Buttons + Image -->
        <Border Grid.Column="4" BorderBrush="LightGray" BorderThickness="1" Padding="5">
            <DockPanel Name="RightDockPanel">
                <!-- Summary Info -->
                <StackPanel Name="ImageInfoPanel" DockPanel.Dock="Top" Margin="0,0,0,10">
                    <Grid x:Name="RightPanel">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" /> <!-- Left half -->
                            <ColumnDefinition Width="*" /> <!-- Right half -->
                        </Grid.ColumnDefinitions>

                        <!-- Left content of right-hand panel -->
                        <StackPanel Grid.Column="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Name="InfoSize" Grid.Column="0" Text="Size" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="InfoSize0" Grid.Column="1" Text="0" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="InfoSize100K" Grid.Column="2" Text="100K" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="InfoSize1M" Grid.Column="3" Text="1M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="InfoSize10M" Grid.Column="4" Text="10M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="InfoSize50M" Grid.Column="5" Text="50M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="InfoSize100M" Grid.Column="6" Text="100M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="InfoSize500M" Grid.Column="7" Text="500M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="InfoSize1G" Grid.Column="8" Text="1G" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="InfoSizeLarge" Grid.Column="9" Text=">1G" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Name="BackupSize" Grid.Column="0" Text="Backups" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="BackupSize0" Grid.Column="1" Text="0" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="BackupSize100K" Grid.Column="2" Text="100K" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="BackupSize1M" Grid.Column="3" Text="1M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="BackupSize10M" Grid.Column="4" Text="10M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="BackupSize50M" Grid.Column="5" Text="50M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="BackupSize100M" Grid.Column="6" Text="100M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="BackupSize500M" Grid.Column="7" Text="500M" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="BackupSize1G" Grid.Column="8" Text="1G" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                <TextBlock Name="BackupSizeLarge" Grid.Column="9" Text=">1G" Padding="4" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="Risks">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Disk Failure: " />
                        <Border Grid.Row="0" Grid.Column="1" Name="BorderDiskFailure">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Name="RiskDiskFailure" Foreground="White"/>
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Corruption: " />
                        <Border Grid.Row="1" Grid.Column="1" Name="BorderCorruption">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Name="RiskCorruption" Foreground="White"/>
                        </Border>

                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Theft: " />
                        <Border Grid.Row="2" Grid.Column="1" Name="BorderTheft">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Name="RiskTheft" Foreground="White"/>
                        </Border>
                        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Fire: " />
                        <Border Grid.Row="3" Grid.Column="1" Name="BorderFire">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Name="RiskFire" Foreground="White"/>
                        </Border>
                    </Grid>
                    <Expander Name="BackupExpander" Header="Backup Locations" IsExpanded="False" Margin="0,5,0,5">
                        <ItemsControl Name="BackupList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                </StackPanel>
                <!-- Action Buttons -->
                <StackPanel x:Name="FileToolbar" Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10" Visibility="Hidden">
                    <Button Content="None" Click="ActionButton_Click" Margin="2"/>
                    <Button Content="Basic" Click="ActionButton_Click" Margin="2"/>
                    <Button Content="High" Click="ActionButton_Click" Margin="2"/>
                    <Button Content="Backup" Click="ActionButton_Click" Margin="2"/>
                    <Button Content="Delete" Click="ActionButton_Click" Margin="2"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" /> <!-- InfoHash or other controls -->
                        <RowDefinition Height="*" /> <!-- Image area -->
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="InfoHash"
                            Grid.Row="0"
                            Margin="0,8,0,0"/>

                    <Viewbox Grid.Row="1" Stretch="Uniform">
                        <Image x:Name="ImagePreview"
                            Stretch="Uniform"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Viewbox>
                    <TextBlock Grid.Row="1" Name="ImageUnavailableMessage"
                            Text="Preview unavailable"
                            Foreground="Gray"
                            FontStyle="Italic"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Collapsed" />


                </Grid>
            </DockPanel>
        </Border>
    </Grid>
</Window>